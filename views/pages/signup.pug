html
	include ../partials/head.pug
	body.d-flex.flex-column.bg-dark
		include ../partials/header.pug
		.container.d-flex.flex-column.flex-fill.bg-light.pb-3
			.row.flex-fill.align-items-center
				.col
					form#signupform(action='/signup' method='post')
						.form-group
							label(for='sInputFirstname') First name
							input#sInputFirstname.form-control(type='text' name='firstname' placeholder="First name")
						.form-group
							label(for='sInputLastname') Last name
							input#sInputLastname.form-control(type='text' name='lastname' placeholder="Last name")
						.form-group
							label(for='sInputEmail') Email address
							input#sInputEmail.form-control(type='email' name='username' placeholder="Email")
						.form-group
							label(for='sInputPassword') Password
							input#sInputPassword.form-control(type='password' name='password' placeholder="Password")
						.form-group
							label(for='sInputCPassword') Confirm password
							input#sInputCPassword.form-control(type='password' placeholder="Password")
							small#message.form-text
						button#btnSubmit.btn.btn-primary(type='submit' disabled=true) Signup
		script(src='js/signup.js')