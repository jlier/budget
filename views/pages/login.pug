html
	include ../partials/head.pug
	body.d-flex.flex-column.bg-dark
		include ../partials/header.pug
		.container.d-flex.flex-column.flex-fill.bg-light.pb-3
			.row.flex-fill.align-items-center
				.col
					form#loginform(action='/login' method='post')
						.form-group
							label(for='inputEmail') Email address
							input#inputEmail.form-control(type='email' name='username' placeholder="Enter email")
						.form-group
							label(for='inputPassword') Password
							input#inputPassword.form-control(type='password' name='password' placeholder="Password")
						button.btn.btn-primary(type='submit') Login
					a(href='/signup') Signup
